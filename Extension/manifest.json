{
  "manifest_version": 2,

  "name": "YouTime",
  "description": "Save and manage YouTube video timemarks.",
  "version": "1.0",
  "icons": {
    "16": "Images/icon24.png",
    "48": "Images/icon48.png",
    "128": "Images/icon64.png"
  },

  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "activeTab",
    "https://ajax.googleapis.com/",
    "bookmarks",
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "32": "Images/icon32.png"
    },
    "default_title": "YouTime",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
      "matches": [
        "http://www.youtube.com/watch?*",
        "https://www.youtube.com/watch?*"
      ],
      "js": [
        "Scripts/content.js"
      ],
      "run_at": "document_start"
  }],

  "web_accessible_resources": ["Scripts/content.js"],

  "content_security_policy": "script-src 'self' https://code.jquery.com/ https://maxcdn.bootstrapcdn.com; object-src 'self'"


}
